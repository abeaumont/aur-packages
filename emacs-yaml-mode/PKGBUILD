# Contributor: Alfredo Beaumont	<alfredo.beaumont@gmail.com>
pkgname=emacs-yaml-mode
_pkgname=yaml-mode
pkgver=0.0.4
pkgrel=1
pkgdesc="Emacs major mode for editing files in the YAML data serialization format"
arch=('i686' 'x86_64')
url="http://yaml-mode.clouder.jp/"
license=('GPL')
groups=()
depends=('emacs')
install=emacs-yaml-mode.install
source=(http://cloud.github.com/downloads/yoshiki/yaml-mode/yaml-mode-0.0.4.tar.gz)
#noextract=()
md5sums=('81212d2831b3c0c8fe916932054bd065')

build() {
  tar zxvf $_pkgname-$pkgver.tar.gz
  cd $startdir/src/$_pkgname-$pkgver
  # Install the mode for Emacs
  install -D -m644 yaml-mode.el $startdir/pkg/usr/share/emacs/site-lisp/$_pkgname.el
}
